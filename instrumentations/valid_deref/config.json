			"where": "before",
			"condition": ["!isValid", "<t1>"],
			"in": "*"
		},
        {
			"findInstructions": [
							{
							  "returnValue": "*",
							  "instruction": "store",
							  "operands": ["<t1>", "<t2>"],
							  "getSizeTo": "<t3>"
						    }
					   ],
			"newInstruction": {
					      "returnValue": "*",
					      "instruction": "call",
					      "operands": ["<t2>","<t3>", "__INSTR_check_load_store"]
					  },
			"where": "before",
			"condition": ["!isValid", "<t2>"],
			"in": "*"
		}

